{
  "manifest_version": 3,
  "name": "ReMixr - Extension Builder",
  "version": "2.0.0",
  "description": "Build browser extensions with AI - A meta-extension development environment",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "management"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
