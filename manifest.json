{
  "manifest_version": 3,
  "name": "ReMixr IDE",
  "version": "2.0.0",
  "description": "Build browser extensions with AI - A meta-extension development environment",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "management",
    "contextMenus",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_title": "Open ReMixr"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/analysis.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}